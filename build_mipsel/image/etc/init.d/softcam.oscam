#!/bin/sh
oscam_version=1.20-svn6174

case "$1" in
start)
	exec start-stop-daemon -S -x /usr/bin/oscam -- -b
	;;
stop)
	exec start-stop-daemon -K -R 2 -x /usr/bin/oscam
	;;
restart|reload)
	$0 stop
	sleep 1
	$0 start
	;;
version)
	echo ${oscam_version}
	;;
info)
	echo "oscam ${oscam_version}"
	;;
*)
	echo "Usage: $0 start|stop|restart"
	exit 1
	;;
esac
exit 0
